<com.angels.widget.stickynav.ACStickyNavLayout3
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@id/id_stickynavlayout_topview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4400ff00">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:gravity="center"
            android:text="软件介绍"
            android:textSize="30sp"
            android:textStyle="bold"/>

    </RelativeLayout>

    <com.angels.widget.stickynav.ACSimpleViewPagerIndicator3
        android:id="@id/id_stickynavlayout_indicator"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffffff">
        <Button
            android:id="@+id/btn01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="按钮1"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="按钮2"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="按钮3"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn04"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="按钮4"
            android:layout_weight="1"/>
    </com.angels.widget.stickynav.ACSimpleViewPagerIndicator3>

    <!--<android.support.v4.view.ViewPager
        android:id="@id/id_stickynavlayout_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#44ff0000">
    </android.support.v4.view.ViewPager>-->
    <LinearLayout
        android:id="@+id/id_stickynavlayout_buttomview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ScrollView
            android:id="@+id/id_stickynavlayout_innerscrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv01"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:background="@color/red_ac"
                    android:gravity="center"
                    android:text="01"/>
                <TextView
                    android:id="@+id/tv02"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:background="@color/green_ac"
                    android:gravity="center"
                    android:text="02"/>
                <TextView
                    android:id="@+id/tv03"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:background="@color/blue_ac"
                    android:gravity="center"
                    android:text="03"/>
                <TextView
                    android:id="@+id/tv04"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:background="@color/yellow_ac"
                    android:gravity="center"
                    android:text="04"/>
            </LinearLayout>
        </ScrollView>
       <!-- <ListView
            android:id="@+id/id_stickynavlayout_innerscrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>-->
    </LinearLayout>

</com.angels.widget.stickynav.ACStickyNavLayout3>