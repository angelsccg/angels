    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.angels.widget.pullableview.PullToRefreshLayout
        android:id="@+id/refresh_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <!--   <include layout="@layout/ac_refresh_head" /> -->
