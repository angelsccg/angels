<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发送指令" />
    <Button
        android:id="@+id/btn02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="读取电量" />
    <Button
        android:id="@+id/btn03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="读取版本号" />
    <Button
        android:id="@+id/btn04"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发送震动指令" />
    <Button
        android:id="@+id/btn05"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开始绑定动画指令" />
    <Button
        android:id="@+id/btn06"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="结束绑定动画指令" />
    <Button
        android:id="@+id/btn07"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="同步步数" />
    <Button
        android:id="@+id/btn08"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="心率" />

    <Button
        android:id="@+id/btn09"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="小米手环2 震动" />
    <Button
        android:id="@+id/btn10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="小米手环2 实时测心率" />
    <Button
        android:id="@+id/btn11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="小米手环2 连接" />

    <Button
        android:id="@+id/btn12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="温度计 " />
</LinearLayout>